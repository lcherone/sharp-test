                        <div id="tab-5" class="tab-pane fade">
                            <div class="row">
                                <div class="col-4">
                                    <div class="laptop draggable">
                                        <div class="content drag-handle">
                                            <img :src="image.src" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="tablet draggable">
                                        <div class="content drag-handle">
                                            <img :src="image.src" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="smartphone draggable">
